doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title= title
        // link(rel='stylesheet' type="text/css" href='/stylesheets/style.css')
        link(rel="stylesheet" type="text/css" href="/stylesheets/main-style.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700;800&family=Noto+Sans+Kannada:wght@100..900&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    body
        h1= title

        if title === 'Choose a file to upload'
            form#uploadForm(action="javascript:void(0);", method="post", enctype="multipart/form-data")
                label(for="fileUpload") Choose a file to upload:
                input(type="file", id="fileUpload", name="file", required)

                input(type="button", value="Remove File", onclick="removeFile()")
                input(type="submit", value="Upload File")

            div#output

        div#messages

        script(type='text/javascript', src='/javascripts/uploading.js')
        script(type='text/javascript', src='/javascripts/websocket.js')
